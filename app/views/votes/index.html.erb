<h1>Listing votes</h1>

<p><%= link_to 'Add a New Vote', new_vote_url %></p>

<table class="table table-hover">
  <tr>
    <th>Location</th>
    <th>Event time</th>
    <th>User</th>
    <th>Event</th>
    <th>token</th>
    <th></th>
    <th></th>
  </tr>

<% @votes.each do |vote| %>
  <tr>
    <td><%= vote.location.name if vote.location.present? %></td>
    <td><%= vote.event_time.time_description.strftime('%l:%M %p') if vote.event_time.time_description.present? %></td>
    <td><%= vote.user_id %></td>
    <td><%= vote.event_id %></td>
	<td><%= vote.token %></td>
    <td><%= link_to 'Show', vote %></td>
    <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
    <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
 
